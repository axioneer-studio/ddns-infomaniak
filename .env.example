container_name="ddns-infomaniak"
# =============================================================================
# Configuration obligatoire
# =============================================================================
INFOMANIAK_DDNS_HOSTNAME="subdomain.example.com"
INFOMANIAK_DDNS_USERNAME="your_username"
INFOMANIAK_DDNS_PASSWORD="your_password"


# =============================================================================
# Configuration optionnelle
# =============================================================================
# Intervalle entre les vérifications (en secondes, min: 15, défaut: 300)
DDNS_INTERVAL_SECONDS=300

# Activer la mise à jour IPv6 (true/false, défaut: false)
DDNS_ENABLE_IPV6=false

# Niveau de log: DEBUG, INFO, WARNING, ERROR (défaut: INFO)
DDNS_LOG_LEVEL=INFO

# =============================================================================
# Configuration avancée (optionnelle)
# =============================================================================
# Timeout des requêtes HTTP en secondes (défaut: 15)
DDNS_REQUEST_TIMEOUT=15

# Nombre de tentatives en cas d'échec (défaut: 3)
DDNS_MAX_RETRIES=3

# Facteur de backoff exponentiel pour les retries (défaut: 1.0)
DDNS_RETRY_BACKOFF=1.0